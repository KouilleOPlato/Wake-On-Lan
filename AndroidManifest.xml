<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="net.mafro.android.wakeonlan"
      android:versionCode="1"
      android:versionName="1.0">

	<uses-permission android:name="android.permission.INTERNET" />

    <application android:label="@string/app_name"
				 android:icon="@drawable/icon"
				 android:debuggable="false"
				 android:description="A simple Wake On Lan application. Stores history of sent packets, to save your fingers.">
	
        <activity android:name=".WakeOnLan"
                  android:label="@string/app_name"
				  android:launchMode="singleInstance">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

		<provider android:name="HistoryProvider" 
				  android:authorities="net.mafro.android.wakeonlan.historyprovider" />
    </application>
</manifest> 
